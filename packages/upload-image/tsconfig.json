{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
