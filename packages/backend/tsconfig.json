{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
